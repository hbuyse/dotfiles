alias v="nvim"

# Add external zsh feature if file available
[[ ! -f "$HOME/.external.zsh" ]] || source "$HOME/.external.zsh"

eval "$(oh-my-posh init zsh --config ~/.config/oh-my-posh/config.omp.yaml)"
eval "$(oh-my-posh completion zsh)"
