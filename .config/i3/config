# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:term"
set $ws2 "2:dev"
set $ws3 "3:web"
set $ws4 "4:mail"
set $ws5 "5:spotify"
set $ws6 "6:message"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10:zoom"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

##########
# RESIZE #
##########

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px
        bindsym j resize grow height 10 px
        bindsym k resize shrink height 10 px
        bindsym l resize grow width 10 px

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px
        bindsym Down resize grow height 10 px
        bindsym Up resize shrink height 10 px
        bindsym Right resize grow width 10 px

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

############
# AUTOMOVE #
############

# Automatically move some applications to dedicated workspaces
for_window [class="(?i)firefox"] move container to workspace $ws3
for_window [class="(?i)chromium.*"] move container to workspace $ws3
for_window [class="(?i)spotify"] move container to workspace $ws5
for_window [class="(?i)thunderbird"] move container to workspace $ws4
for_window [class="(?i)mattermost"] move container to workspace $ws6
for_window [class="(?i)discord"] move container to workspace $ws6
for_window [class="(?i)zoom"] move container to workspace $ws10

########
# ROFI #
########

# start rofi (a program launcher)
# Notes: The I3 Window manager does not like commas in the command when specifying an exec command.
# For that case ´#´ can be used as a separator.
bindsym --release $mod+d exec rofi -sidebar-mode -show drun -combi-modi "drun#run#ssh#window"
bindsym --release $mod+x exec $HOME/.config/rofi/killmenu.sh
bindsym --release $mod+F4 exec $HOME/.config/rofi/powermenu.sh

##############
# SCREENSHOT #
##############
bindsym --release Print exec --no-startup-id scrot --multidisp "$HOME/Pictures/%Y%m%d_%H%M%S.png" --exec 'notify-send "Screenshot taken" "$f\n$wx$h"'
bindsym --release Mod1+Sys_Req exec --no-startup-id scrot --focused "$HOME/Pictures/%Y%m%d_%H%M%S.png" --exec 'notify-send "Screenshot taken" "$f\n$wx$h"'
bindsym --release Control+Print exec --no-startup-id scrot --select --freeze "$HOME/Pictures/%Y%m%d_%H%M%S.png" --exec 'notify-send "Screenshot taken" "$f\n$wx$h"'



#############
# AUTOSTART #
#############

# Set the screenlayout
exec_always autorandr -c

# Set the different keyboard layouts
# us-intl: US international layout
# fr-latin9: french keyboard layout
exec_always --no-startup-id setxkbmap -layout "us,fr" -variant "intl,latin9"

# Increase keyboard repeat and delay
# After 450 ms of pressing a key, the OS will put out about 60 times the same key in a second
exec_always --no-startup-id xset r rate 450 60

# Setup pulseaudio
exec_always --no-startup-id $HOME/.config/i3/setup_pactl.sh

#locking the screen ( should be the exact size of the screen )
bindsym $mod+p exec --no-startup-id xautolock -locknow

# Start the automatic locker with 5 minutes before locking and 15 before suspending
exec_always --no-startup-id $HOME/.config/i3/start_xautolock.sh
exec_always --no-startup-id $HOME/.config/rofi/power.sh Uncaffeinate

# Start picom
exec_always --no-startup-id $HOME/.config/picom/launch.sh

# Start polybar
# Polybar must be started through the i3 config file (and not using .xsession)
# Otherwise, polybar will not be able to show the different workspace in the bar.
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start redshift
exec_always --no-startup-id $HOME/.config/redshift/launch.sh

