{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#313244",
          "foreground": "#EEEEEE",
          "style": "plain",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} \ue0b1",
          "type": "os"
        },
        {
          "background": "#313244",
          "foreground": "#00AAFF",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root",
          "comment": "Show when the current user is root or when in an elevated shell (Windows)"
        },
        {
          "background": "#313244",
          "foreground": "#26C6DA",
          "properties": {
            "style": "powerlevel",
            "edge_format": "%s",
            "max_width": 80
          },
          "style": "plain",
          "template": " \uf07c {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#313244",
          "foreground": "#D4E157",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#c4a000{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#4e9a06{{ end }}"
          ],
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_icon": "\uf126 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "mapped_branches": {
              "feature/*": "ðŸš€ "
            },
            "full_branch_path": true
          },

          "type": "git"
        },
        {
          "background": "transparent",
          "foreground": "#313244",
          "style": "plain",
          "template": "\ue0b0",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#313244",
          "foreground": "#D7AF00",
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " {{ .UserName }}@{{ .HostName }} <#ffffff>\ue0b3</> ",
          "type": "session"
        },
        {
          "background": "#313244",
          "foreground": "#A6ADC8",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "{{ .CurrentDate | date .Format }} \uf017 ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#D4E157",
          "foreground_templates": ["{{ if gt .Code 0 }}#FF5252{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
