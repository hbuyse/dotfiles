[
  {
    "layer": "top",
    "position": "top",
    "height": 32,
    "modules-left": [
      "sway/workspaces"
      // "sway/window"
    ],
    "modules-center": ["sway/mode"],
    "modules-right": [
      "custom/wf-recorder",
      "custom/weather",
      "custom/playerctl",
      "idle_inhibitor",
      "sway/language",
      "network",
      "pulseaudio",
      "clock",
      "custom/power"
    ],
    "sway/workspaces": {
      "all-outputs": false,
      "disable-scroll": false,
      "format": "{icon} {name}",
      "format-icons": {
        "1:term": "î•",
        "2:dev": "ï¯",
        "3:web": "ó°ˆ¹",
        "4:mail": "ï¯",
        "5:message": "ó°¡",
        "6:spotify": "ï†¼",
        "7": "ó°Œ½",
        "8:docker": "ïŒˆ",
        "9:passwords": "ï€£",
        "10:zoom": "ï€½"
      }
    },
    "sway/language": {
      "format": "ï„œ  {}",
      "min-length": 5,
      "tooltip": false,
      "on-click": "swaymsg input $(swaymsg -t get_inputs --raw | jq '[.[] | select(.type == \"keyboard\")][0] | .identifier') xkb_switch_layout next"
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>",
      "tooltip": false
    },
    "sway/window": {
      "format": "{}",
      "max-length": 50,
      "tooltip": true
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ï® ",
        "deactivated": "ï° "
      },
      "timeout": 30
    },
    "pulseaudio": {
      "format": "{icon}  {volume}% {format_source}",
      "format-bluetooth": "{icon}ïŠ“ {volume}%",
      "format-muted": "ï€¦ {format_source}",
      "format-source": " ï„° {volume}%",
      "format-source-muted": "ï€¦",
      "format-icons": {
        "headphone": "ï€¥",
        "default": ["ï€¦", "ï€§", "ï€¨"]
      },
      "tooltip-format": "{icon} â€Š{volume}% {format_source}",
      "on-click": "swaymsg exec \\$pulseaudio",
      "on-click-middle": "swaymsg exec \\$volume_mute",
      "on-click-right": "swaymsg exec pavucontrol",
      "on-scroll-up": "swaymsg exec \\$volume_up",
      "on-scroll-down": "swaymsg exec \\$volume_down"
    },
    "network": {
      "format-wifi": "{icon}  {ipaddr}",
      "format-ethernet": "ïƒ {ipaddr}",
      "format-disconnected": "ï„§",
      "tooltip-format-wifi": "{ifname} on {essid}",
      "tooltip-format": "ó°©Ÿ  {ipaddr}\nó±€£  {netmask}\nó±‚‡  {gwaddr}",
      "on-click": "swaymsg exec '$term -e nmtui'",
      "format-icons": ["ó°¤Ÿ", "ó°¤¢", "ó°¤¥", "ó°¤¨", "ó°¤¨"]
    },
    "clock": {
      "format": "{:%e %b %H:%M}",
      "tooltip": true,
      "tooltip-format": "{:%d.%m.%Y %H:%M}",
      "interval": 5,
      "on-click": "swaymsg exec \\$calendar"
    },
    "custom/wf-recorder": {
      "interval": "once",
      "return-type": "json",
      "format": "{}",
      "tooltip-format": "{tooltip}",
      "exec": "echo '{\"class\": \"recording\",\"text\":\"ï€½\",\"tooltip\":\"press $mod+Esc to stop recording\"}'",
      "exec-if": "pgrep wf-recorder",
      "on-click": "killall -s SIGINT wf-recorder",
      "signal": 8
    },
    "custom/playerctl": {
      "interval": "once",
      "tooltip": true,
      "return-type": "json",
      "format": "{icon}",
      "format-icons": {
        "Playing": "ï‹",
        "Paused": "ïŒ"
      },
      "exec": "playerctl metadata --format '{\"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}:  {{markup_escape(title)}} - {{markup_escape(artist)}}\" }'",
      "on-click": "playerctl play-pause; pkill -RTMIN+5 waybar",
      "on-click-right": "playerctl next; pkill -RTMIN+5 waybar",
      "on-scroll-up": "playerctl position 10+; pkill -RTMIN+5 waybar",
      "on-scroll-down": "playerctl position 10-; pkill -RTMIN+5 waybar",
      "signal": 5
    },
    "custom/power": {
      "format": "ï€‘",
      "on-click": "wlogout -p layer-shell"
    },
    "custom/weather": {
      "icon-size": 42,
      "format": "{icon} {}",
      "tooltip": true,
      "interval": 3600,
      "exec": "~/.config/waybar/weather.py --city=Paris",
      "return-type": "json",
      "format-icons": {
        "Unknown": "âœ¨",
        "Cloudy": "ïƒ‚",
        "Fog": "ğŸŒ«",
        "HeavyRain": "ğŸŒ§",
        "HeavyShowers": "ğŸŒ§",
        "HeavySnow": "â„ï¸",
        "HeavySnowShowers": "â„ï¸",
        "LightRain": "ğŸŒ¦",
        "LightShowers": "ğŸŒ¦",
        "LightSleet": "ğŸŒ§",
        "LightSleetShowers": "ğŸŒ§",
        "LightSnow": "ğŸŒ¨",
        "LightSnowShowers": "ğŸŒ¨",
        "PartlyCloudy": "â›…ï¸",
        "Sunny": "â˜€ï¸",
        "ThunderyHeavyRain": "ğŸŒ©",
        "ThunderyShowers": "â›ˆ",
        "ThunderySnowShowers": "â›ˆ",
        "VeryCloudy": "ïƒ‚"
      }
    }
  },
  {
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "modules-right": [
      "disk#root",
      "disk#home",
      "disk#usr",
      "memory",
      "cpu",
      "battery",
      "tray"
    ],
    "battery": {
      "format": "{icon}  {capacity}%",
      "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "cpu": {
      "interval": 5,
      "format": "ï‹› {usage}%",
      "states": {
        "warning": 70,
        "critical": 90
      },
      "on-click": "swaymsg exec '$term -e htop'"
    },
    "memory": {
      "interval": 30,
      "format": "ïƒ‰ {}%",
      "states": {
        "warning": 70,
        "critical": 90
      },
      "on-click": "swaymsg exec '$term -e htop'"
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    },
    "disk#home": {
      "interval": 30,
      "path": "/home",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    },
    "disk#root": {
      "interval": 30,
      "path": "/",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    },
    "disk#usr": {
      "interval": 30,
      "path": "/usr",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    }
  }
]
