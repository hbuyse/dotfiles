[
  {
    "layer": "top",
    "position": "top",
    "height": 32,
    "modules-left": [
      "sway/workspaces"
      // "sway/window"
    ],
    "modules-center": ["sway/mode"],
    "modules-right": [
      "custom/wf-recorder",
      "custom/weather",
      "custom/playerctl",
      "idle_inhibitor",
      "sway/language",
      "network",
      "backlight",
      "pulseaudio",
      "clock",
      "custom/power"
    ],
    "sway/workspaces": {
      "all-outputs": false,
      "disable-scroll": false,
      "format": "{icon} {name}",
      "format-icons": {
        "1:term": "Óûï",
        "2:dev": "ÔçØ",
        "3:web": "Û∞àπ",
        "4:mail": "ÔêØ",
        "5:message": "Û∞ç°",
        "6:spotify": "ÔÜº",
        "7": "Û∞åΩ",
        "8:docker": "Ôåà",
        "9:passwords": "ÔÄ£",
        "10:zoom": "ÔÄΩ"
      }
    },
    "sway/language": {
      "format": "ÔÑú  {}",
      "min-length": 5,
      "tooltip": false,
      "on-click": "swaymsg input $(swaymsg -t get_inputs --raw | jq '[.[] | select(.type == \"keyboard\")][0] | .identifier') xkb_switch_layout next"
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>",
      "tooltip": false
    },
    "sway/window": {
      "format": "{}",
      "max-length": 50,
      "tooltip": true
    },
    "backlight": {
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "format-icons": ["Û∞πê", "Û±©é", "Û±©è", "Û±©ê", "Û±©ë", "Û±©í", "Û±©ì", "Û±©î", "Û±©ï", "Û±©ñ", "Û∞õ®"]
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ ",
        "deactivated": "ÔÅ∞ "
      },
      "timeout": 30
    },
    "pulseaudio": {
      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "{icon}Ôäì {volume}%",
      "format-muted": "ÔÄ¶ {format_source}",
      "format-source": " ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÄ¶",
      "format-icons": {
        "headphone": "ÔÄ•",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "tooltip-format": "{icon} ‚Ää{volume}% {format_source}",
      "on-click": "swaymsg exec '$term -e pulsemixer'",
      "on-click-middle": "swaymsg exec '$volume_mute'",
      "on-click-right": "swaymsg exec 'pavucontrol'",
      "on-scroll-up": "swaymsg exec '$volume_up'",
      "on-scroll-down": "swaymsg exec '$volume_down'"
    },
    "network": {
      "format-wifi": "{icon}  {ipaddr}",
      "format-ethernet": "ÔÉÅ {ipaddr}",
      "format-disconnected": "ÔÑß",
      "tooltip-format-wifi": "{ifname} on {essid}",
      "tooltip-format": "Û∞©ü  {ipaddr}\nÛ±Ä£  {netmask}\nÛ±Çá  {gwaddr}",
      "on-click": "swaymsg exec '$term -e nmtui'",
      "format-icons": ["Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®", "Û∞§®"]
    },
    "clock": {
      "format": "{:%d/%m %H:%M}",
      "format-alt": "{:%e %b %Y %H:%M}",
      "tooltip": true,
      "interval": 5,
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode": "year",
        "mode-mon-col": 3,
        "weeks-pos": "", // No week number
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
          "months": "<span color='#ffead3'><b>{}</b></span>",
          "days": "<span color='#ecc6d9'><b>{}</b></span>",
          "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
          "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
          "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
      }
    },
    "custom/wf-recorder": {
      "interval": "once",
      "return-type": "json",
      "format": "{}",
      "tooltip-format": "{tooltip}",
      "exec": "echo '{\"class\": \"recording\",\"text\":\"ÔÄΩ\",\"tooltip\":\"press $mod+Esc to stop recording\"}'",
      "exec-if": "pgrep wf-recorder",
      "on-click": "killall -s SIGINT wf-recorder",
      "signal": 8
    },
    "custom/playerctl": {
      "interval": "once",
      "tooltip": true,
      "return-type": "json",
      "format": "{icon}",
      "format-icons": {
        "Playing": "ÔÅã",
        "Paused": "ÔÅå"
      },
      "exec": "playerctl metadata --format '{\"alt\": \"{{status}}\", \"tooltip\": \"{{playerName}}:  {{markup_escape(title)}} - {{markup_escape(artist)}}\" }'",
      "on-click": "playerctl play-pause; pkill -RTMIN+5 waybar",
      "on-click-right": "playerctl next; pkill -RTMIN+5 waybar",
      "on-scroll-up": "playerctl position 10+; pkill -RTMIN+5 waybar",
      "on-scroll-down": "playerctl position 10-; pkill -RTMIN+5 waybar",
      "signal": 5
    },
    "custom/power": {
      "format": "ÔÄë",
      "on-click": "~/.config/rofi/powermenu.sh"
    },
    "custom/weather": {
      "icon-size": 42,
      "format": "{icon} {}",
      "tooltip": true,
      "interval": 3600,
      "exec": "~/.config/waybar/weather.py --city=Paris",
      "return-type": "json",
      "format-icons": {
        "Unknown": "‚ú®",
        "Cloudy": "ÔÉÇ",
        "Fog": "üå´",
        "HeavyRain": "üåß",
        "HeavyShowers": "üåß",
        "HeavySnow": "‚ùÑÔ∏è",
        "HeavySnowShowers": "‚ùÑÔ∏è",
        "LightRain": "üå¶",
        "LightShowers": "üå¶",
        "LightSleet": "üåß",
        "LightSleetShowers": "üåß",
        "LightSnow": "üå®",
        "LightSnowShowers": "üå®",
        "PartlyCloudy": "‚õÖÔ∏è",
        "Sunny": "‚òÄÔ∏è",
        "ThunderyHeavyRain": "üå©",
        "ThunderyShowers": "‚õà",
        "ThunderySnowShowers": "‚õà",
        "VeryCloudy": "ÔÉÇ"
      }
    }
  },
  {
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "modules-right": [
      "disk#root",
      "disk#home",
      "disk#usr",
      "memory",
      "cpu",
      "battery",
      "tray"
    ],
    "battery": {
      "format": "{icon}  {capacity}%",
      "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
      "states": {
        "warning": 25,
        "critical": 10
      }
    },
    "cpu": {
      "interval": 5,
      "format": "Ôãõ {usage}%",
      "states": {
        "warning": 70,
        "critical": 90
      },
      "on-click": "swaymsg exec '$term -e htop'"
    },
    "memory": {
      "interval": 30,
      "format": "ÔÉâ {}%",
      "states": {
        "warning": 70,
        "critical": 90
      },
      "on-click": "swaymsg exec '$term -e htop'"
    },
    "tray": {
      "icon-size": 16,
      "spacing": 10
    },
    "disk#home": {
      "interval": 30,
      "path": "/home",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    },
    "disk#root": {
      "interval": 30,
      "path": "/",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    },
    "disk#usr": {
      "interval": 30,
      "path": "/usr",
      "format": "<span color='#83a598'>{path}</span>: {percentage_used}%"
    }
  }
]
