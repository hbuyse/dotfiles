ignore-empty-password
font=Iosevka Nerd Font
#font-size=80

# clock: Show time and date.
# timestr: The format string for the time. Defaults to '%T'.
# datestr: The format string for the date. Defaults to '%a, %x'.
clock
timestr=%R
datestr=%d/%m/%Y

# Display the given image, optionally only on the given output.
# image: [[<output>]:]<path>
image=~/.config/wallpapers/locker

# Display the current xkb layout while typing.
show-keyboard-layout
#hide-keyboard-layout

# Disable the Caps Lock text.
disable-caps-lock-text

# Make the lock screen fade in instead of just popping in.
#fade-in=0.2

# Blur images.
effect-blur=5x1
# Make images greyscale.
#effect-greyscale
# Scale images.
effect-scale=0.3

# Always show the indicator
indicator
# Sets the indicator radius.
indicator-radius=150
# Sets the indicator thickness.
indicator-thickness=10
# Show the current Caps Lock state also on the indicator.
indicator-caps-lock
# Sets the horizontal and vertical positions of the indicator.
# indicator-x-position=100
# indicator-y-position=100

# Turn the screen into the given color instead of white (if image is not provided)
color=1e1e2eff

# Sets the color of the lines that separate highlight segments.
separator-color=00000000

# Sets the color of the inside of the indicator.
# - normal
# - when cleared.
# - when Caps Lock is active.
# - when verifying.
# - when invalid.
inside-color=18182599
inside-clear-color=18182599
inside-caps-lock-color=18182599
inside-ver-color=18182599
inside-wrong-color=18182599

# Sets the color of the box containing the layout text.
# - background
# - border
# - text
layout-bg-color=00000000
layout-border-color=00000000
layout-text-color=bac2de7f

# Sets the color of the line between the inside and ring.
# - normal
# - when cleared.
# - when Caps Lock is active.
# - when verifying.
# - when invalid.
line-color=00000000
line-clear-color=00000000
line-caps-lock-color=00000000
line-ver-color=00000000
line-wrong-color=00000000

# Sets the color of the ring of the indicator.
# - normal
# - when cleared.
# - when Caps Lock is active.
# - when verifying.
# - when invalid.
ring-color=b4befeff
ring-clear-color=f5e0dcff
ring-caps-lock-color=fab387ff
ring-ver-color=89b4faff
ring-wrong-color=eba0acff

# Sets the color of the text.
# - normal
# - when cleared.
# - when Caps Lock is active.
# - when verifying.
# - when invalid.
text-color=cdd6f4ff
text-clear-color=f5e0dc7f
text-caps-lock-color=fab3877f
text-ver-color=89b4fa7f
text-wrong-color=eba0ac7f

# Sets the color of backspace highlight segments.
# - normal
# - when Caps Lock is active.
bs-hl-color=f5e0dcff
caps-lock-bs-hl-color=f5e0dcff

# Sets the color of the key press highlight segments.
# - normal
# - when Caps Lock is active.
key-hl-color=880033ff
caps-lock-key-hl-color=a6e3a1ff
