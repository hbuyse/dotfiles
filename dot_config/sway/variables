### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# workspace names
set $ws1 "1:term"
set $ws2 "2:dev"
set $ws3 "3:web"
set $ws4 "4:mail"
set $ws5 "5:message"
set $ws6 "6:spotify"
set $ws7 "7"
set $ws8 "8:docker"
set $ws9 "9:passwords"
set $ws10 "10:zoom"

# Override terminal
set $term $HOME/.local/bin/preferred-terminal

# Gruvbox colors
set $bg #1e1e2e
set $red #f38ba8
set $green #a6e3a1
set $yellow #f9e2af
set $blue #89b4fa
set $purple #cba6f7
set $aqua #94e2d5
set $gray #9399b2
set $darkgray #313244
set $white #ffffff


########
# ROFI #
########

# start rofi (a program launcher)
#set $menu       rofi -sidebar-mode -show drun -combi-modi "drun,run,ssh,window"
set $menu       pkill -x wofi || wofi
set $powermenu  $HOME/.config/sway/scripts/powermenu.sh

# Volume control
set $volume_down pulsemixer --change-volume -1 && $onscreen_bar $(pulsemixer --get-volume)
set $volume_up pulsemixer --change-volume +1 && $onscreen_bar $(pulsemixer --get-volume)
set $volume_mute pulsemixer --toggle-mute && $(pulsemixer --get-volume)

set $pulseaudio $term_float pulsemixer
#  vim: set ts=4 sw=4 tw=0 et ft=swayconfig :
